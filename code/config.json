{
    "name": "RNNLM",
    "cuda": true,
    "data_loader": {
        "data_dir": "../data/",
        "batch_size": 128,
        "seq_len": 35,
        "shuffle": false
    },
    "validation": {
        "validation_split": 0.0,
        "shuffle": false
    },
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.001,
        "weight_decay": 0
    },
    "loss": "my_loss",
    "metrics": ["my_metric"],
    "trainer": {
        "epochs": 5,
        "save_dir": "saved/",
        "save_freq": 1,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "arch": "RNNLM",
    "model": {
        "rnn_type": "LSTM",
        "ninput": 300,
        "nhidden": 128,
        "nlayers": 2,
        "dropout": 0.5,
        "tie_weights": false
    }
}